/* pages/shop/mine/index.wxss */
.container{
  background-color: #f8f8f9;
  padding: 0;
}
.header{
  display: flex;
  flex-direction: row;
  align-items: center;
  padding:20rpx 100rpx;
  background-color: #fff;
  }
.nickname{
  flex: 1;
  line-height: 150rpx;
  font-size: 12pt;
  font-weight: 500;
}
.avatar{
  flex: 0 0 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  background-color: rgba(0,0,0,0.1)
}
.avatar image{
  width: 100%;
  height: 100%;
    border-radius: 75rpx;
}
.userInfoAuthorize button{
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
  background-color: rgba(0,0,0,0.1);
  line-height: 150rpx;
  color: #1aad19;
  font-size:10pt; 
}
.item-wrap .order{
  margin-top: 20rpx;
}


.item-wrap .contact{
  border-radius: 0;
}