/* pages/shop/to-pay/index.wxss */
.container{
  background-color: #f8f8f9;
  padding: 0;
  overflow-y: auto;
  height: 100vh;
  padding-bottom: 120rpx;
  display: block;
}
.address-item{
  display: flex;
  padding:30rpx  20rpx;
  flex-direction: row;
  align-items: center;
  width: 100%;
  background-color: #FFF;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  position: relative;
}
.address-item .img{
  flex: 0 0 80rpx;
}
.address-item .img image{
  width: 50rpx;
  height: 50rpx;
}
.address-item .address{
  font-size: 9pt;
  line-height: 45rpx;
  }

  .goods{
  width: 100%;
  border-bottom:1rpx solid #f8f8f9;
  padding-top:30rpx; 
  background-color:#fff; 
}
.goods .goods-list{
  padding:5rpx 15rpx;
  box-sizing: border-box;
  line-height: 50rpx;
  align-items: center;
  background-color: #fff;
}

.goods .goods-list .img{
 flex: 0 0 140rpx;
}
.goods .goods-list .img image{
  height: 120rpx;
  width: 120rpx;
}
.goods .goods-list .name{
    overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}
.goods .goods-list .price{
font-weight: 500;
flex: 1;
}
.goods .goods-list .specificationsStr{
  color: #EB77A8;
}
.goods .third-line{
  display:flex;
  flex-direction:row; 
}
.goods .count{
  padding: 10rpx 10rpx;
  flex: 1;
  text-align: right;
}

.info-item{
  background-color: #fff;
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 15rpx 15rpx;
  line-height: 40rpx;
  box-sizing: border-box;
  min-height: 60rpx;
}
.info-item .title{
  flex: 1;
}
.totalPrice .value{
  color: #EB77A8;
}

.remark{
  border-top: 1rpx solid #f8f8f9;
   padding:30rpx 15rpx; 
   line-height: 50rpx;
}
.remark .title{
  flex: 0 0 100rpx;
}
.remark .value{
  flex: 1;
}
.remark input{
  font-size:9pt; 
}
.toolbar{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 80rpx;
  background-color: #fff;
  width: 100%;
  align-content: space-between;
  text-align: center;
  align-items: center;
}
.toolbar .balance{
background-color: #EB77A8;
flex: 0 0 150rpx;
color: #fff;
 line-height: 80rpx;
}
.toolbar .total{
color: #000;
 line-height: 80rpx;
 padding: 0 10rpx;
}
.toolbar .total{
text-align: left;
color: #000;
}
.toolbar .totalPrice{
color: #EB77A8;
margin-right: 10rpx;
}
.toolbar .yunfeitag{
color: #bbbec4;
font-size: 9pt;
}
